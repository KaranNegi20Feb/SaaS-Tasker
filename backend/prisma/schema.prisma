generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(uuid())
  firstName      String
  lastName       String
  email          String           @unique
  bio            String?
  skills         String[]
  githubUsername String?          // extract from GitHub URL
  avatar         String?
  githubUrl      String?
  twitterUrl     String?
  linkedinUrl    String?       
  provider       String?          // <- add this if you're using "google" as a provider flag
  organizations  Organization[]   @relation("UserOrganizations")
  tasks          Task[]
  password       String?          // <- make optional
  salt           String?          // <- make optional
  @@map("users")
}


model Organization {
  id     String   @id @default(uuid())
  name   String
  users  User[]   @relation("UserOrganizations")
  tasks  Task[]

  @@map("organizations")
}

model Task {
  id              String         @id @default(uuid())
  title           String
  description     String
  userId          String?         // Optional: Task may belong to a User
  organizationId  String          // Must belong to an Organization
  status          String          @default("PENDING")
  user            User?           @relation(fields: [userId], references: [id])
  organization    Organization    @relation(fields: [organizationId], references: [id])

  @@map("tasks")
}
